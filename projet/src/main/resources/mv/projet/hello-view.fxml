<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" onMouseDragEntered="#onHelloButtonClick" prefHeight="312.0" prefWidth="304.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mv.projet.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" text="Hello!" />
    <RadioButton contentDisplay="TOP" text="Select me" textFill="#dc3232">
        <contextMenu>
            
        </contextMenu>
      <font>
         <Font name="Calibri" size="14.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </RadioButton>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onHelloButtonClick" text="Mon bouton" textFill="#c71b1b" />
         <Label text="Du text" />
      </children>
   </HBox>
   <TextField onAction="#onHelloButtonClick" promptText="Entrez du texte" />
</VBox>